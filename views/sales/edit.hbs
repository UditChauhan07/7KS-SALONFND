<form id="salesEditForm" method="POST" action="/sales/{{{editData.id}}}">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Edit {{{moduleName}}}</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Basic Details</h5>
                        <small class="text-muted float-end">Editing details of {{{editData.fullName}}}</small>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-fullname">Full Name</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                        class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="sales-edit-fullname"
                                    placeholder="John Doe" aria-label="John Doe" name="fullName"
                                    aria-describedby="basic-icon-default-fullname2" value="{{{editData.fullName}}}" />
                            </div>
                                                                                   <span id="sales-edit-fullname-error" class="text-danger d-none">this field is
                                required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-email">Email</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input type="text" id="sales-edit-email" class="form-control"
                                    placeholder="john.doe" aria-label="john.doe"
                                    aria-describedby="basic-icon-default-email2" name="email" autocomplete="new-email"
                                    value="{{{editData.email}}}" />
                                <span id="basic-icon-default-email2" class="input-group-text">@example.com</span>
                            </div>
                                                                                    <span id="sales-edit-email-error" class="text-danger d-none">this field is required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-phone">Phone No</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-phone2" class="input-group-text"><i
                                        class="bx bx-phone"></i></span>
                                <input type="text" id="sales-edit-phone" name="contactNumber"
                                    class="form-control phone-mask" placeholder="658 799 8941" aria-label="658 799 8941"
                                    aria-describedby="basic-icon-default-phone2" value="{{{editData.contactNumber}}}" />
                            </div>
                                                                                    <span id="sales-edit-phone-error" class="text-danger d-none">this field is required</span>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" name="isEnabled"
                                id="defaultCheck3" {{#if editData.isEnabled}}checked {{/if}} />
                            <label class="form-check-label" for="defaultCheck3">
                                Active {{{moduleName}}}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Address Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-address">Address</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-message2" class="input-group-text"><i
                                        class="bx bx-home"></i></span>
                                <textarea id="sales-edit-address" class="form-control"
                                    placeholder="304B, Manious Street" aria-label="304B, Manious Street" name="address"
                                    aria-describedby="basic-icon-default-message2">{{{editData.addressfield1}}}</textarea>
                            </div>
                                                      <span id="sales-edit-address-error" class="text-danger d-none">this field is
                                required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-city">City</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                        class="bx bx-buildings"></i></span>
                                <input type="text" class="form-control" id="sales-edit-city"
                                    placeholder="Madrid" aria-label="Madrid" name="city"
                                    aria-describedby="basic-icon-default-fullname2"
                                    value="{{{editData.addressfield2}}}" />
                            </div>
                                                        <span id="sales-edit-city-error" class="text-danger d-none">this field is required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-state">State</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i
                                        class="bx bx-stats"></i></span>
                                <input type="text" id="sales-edit-state" name="state" class="form-control"
                                    placeholder="Barcelona" aria-label="Barcelona"
                                    aria-describedby="basic-icon-default-company2"
                                    value="{{{editData.addressfield3}}}" />
                            </div>
                                                        <span id="sales-edit-state-error" class="text-danger d-none">this field is required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-zipCode">Zip Code</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-directions"></i></span>
                                <input type="text" id="sales-edit-zipCode" name="zipCode" class="form-control"
                                    placeholder="214562" aria-label="214562"
                                    aria-describedby="basic-icon-default-email2" value="{{{editData.addressfield4}}}" />
                            </div>
                                                        <span id="sales-edit-zipCode-error" class="text-danger d-none">this field is
                                required</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="sales-edit-country">Country</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-shape-circle"></i></span>
                                <select id="sales-edit-country" name="country" class="select2 form-select">
                                    <option value="">Select</option>
                                    {{#each countries}}
                                    <option value="{{{id}}}">{{{name}}}</option>
                                    {{/each}}
                                </select>
                            </div>
                                                        <span id="sales-edit-country-error" class="text-danger d-none">this field is
                                required</span>
                        </div>

                        <span onclick="SubmitEditSalesForm();"  class="btn btn-primary">Update</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
$('#sales-edit-country').val("{{{editData.addressfield8}}}")

    function SubmitEditSalesForm() {
        let fullName = $('#sales-edit-fullname').val();
        let email = $('#sales-edit-email').val();
        let phone = $('#sales-edit-phone').val();
        let password = $('#sales-edit-password').val();
        let cpassword = $('#sales-edit-c-password').val();
        let address = $('#sales-edit-address').val();
        let city = $('#sales-edit-city').val();
        let state = $('#sales-edit-state').val();
        let zipCode = $('#sales-edit-zipCode').val();
        let country = $('#sales-edit-country').val();
        if (!fullName || fullName == "") {
            $('#sales-edit-fullname-error').removeClass('d-none');
        } else {
            $('#sales-edit-fullname-error').addClass('d-none');
        }
        if (!email) {
            $('#sales-edit-email-error').removeClass('d-none');
        } else {
            $('#sales-edit-email-error').addClass('d-none');
        }
        if (!phone) {
            $('#sales-edit-phone-error').removeClass('d-none');
        } else {
            $('#sales-edit-phone-error').addClass('d-none');
        }
        if (!password) {
            $('#sales-edit-password-error').removeClass('d-none');
        } else {
            $('#sales-edit-password-error').addClass('d-none');
        }
        if (!cpassword) {
            $('#sales-edit-c-password-error').removeClass('d-none');
        } else {
            $('#sales-edit-c-password-error').addClass('d-none');
        }
        if (!address) {
            $('#sales-edit-address-error').removeClass('d-none');
        } else {
            $('#sales-edit-address-error').addClass('d-none');
        }
        if (!city) {
            $('#sales-edit-city-error').removeClass('d-none');
        } else {
            $('#sales-edit-city-error').addClass('d-none');
        }
        if (!state) {
            $('#sales-edit-state-error').removeClass('d-none');
        } else {
            $('#sales-edit-state-error').addClass('d-none');
        }
        if (!zipCode) {
            $('#sales-edit-zipCode-error').removeClass('d-none');
        } else {
            $('#sales-edit-zipCode-error').addClass('d-none');
        }
        if (!country) {
            $('#sales-edit-country-error').removeClass('d-none');
        } else {
            $('#sales-edit-country-error').addClass('d-none');
        }
        console.log({ fullName, email, phone, password, cpassword, address, city, state, zipCode, country })
        if (fullName && email && phone &&  address && city && state && zipCode && country) {
            $('#salesEditForm').submit();
        }
        //admin-create-fullname-error
    }
</script>